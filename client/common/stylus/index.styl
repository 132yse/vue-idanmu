//初始化
@import "variable.styl"
@import "reset.styl"

//公共样式

body
  background: $bg-color
  color: $color
  font: 14px Microsoft YaHei
  letter-spacing: 1px

a
  color: $pink-color

blockquote
  background: $bg-color
  padding: 5px 15px
  border-radius 4px

blockquote p
  padding: 0

.wrap
  width: 1120px
  margin 0 auto

.clear
  clear both

::-webkit-scrollbar

  width: 6px
  height: 6px

::-webkit-scrollbar-track-piece

  background-color: #131629

::-webkit-scrollbar-thumb:vertical

  height: 5px
  background-color: $blue-color

::-webkit-scrollbar-thumb:horizontal
  width: 5px
  background-color: #CCCCCC
  -webkit-border-radius: 6px

.content
  h1
    font-size: 22px
    border-left: 5px solid $yellow
    padding-left: 10px
    font-weight bold
    margin 15px 0
  h2
    font-size: 22px
    border-left: 5px solid $pink-color
    padding-left: 10px
    font-weight bold
    margin 15px 0
  h3
    font-size: 16px
    border-left: 5px solid $blue-color
    padding-left: 10px
    font-weight bold
    margin 15px 0
  code
    background $bg-color
    padding: 3px 8px
    border-radius 2px
    font-size: 16px
    font-weight: bold
    margin 15px 0

  strong
    font-weight bold
