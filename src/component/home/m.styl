@import '../../public/css/var.styl'

@media screen and (max-width: 480px)
    h1
        padding 20px 10px
        font-size 24px
    .rank, .footer, .biu, .logo, .ugc-list
        display none
    body
        min-width 100%
    .wrap
        width 100%
    nav
        a
            margin 0 !important
        .active
            margin-left 10px
    header
        height 120px
    .search
        transform translate(-50%, 0)
    .cover, .cover img
        width 100% !important
        height 220px !important
    .recommend
        padding 0 10px
        box-sizing border-box
        li
            width 50%
            padding 10px
            box-sizing border-box
        .title
            width 100%
    .week-list
        .posts
            height auto
            padding 0 10px
            box-sizing border-box
        h1
            display none
        .headline
            ul
                display flex
            button
                margin 3px !important
        .cover, img
            height 70px !important
            width 70px !important
            border-radius 35px !important
        .title
            height 30px !important
    .post-list
        box-sizing border-box
        padding 0 10px
        li
            width 50%
            margin 0
            box-sizing border-box
            padding 10px
    .right
        box-sizing border-box
        width 100%
        .info
            width 100%
    .video-list
        width 100%
        box-sizing border-box
    .ep
        width 100%
        height auto
    .close
        right 50%
        transform translate(50%, 0)
        top -50px