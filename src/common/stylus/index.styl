//初始化
@import "variable.styl"
@import "reset.styl"

//公共样式

body
  background: $bg-color
  color: $color
  font: 14px Microsoft YaHei
  letter-spacing: 1px

a
  color: $a-color

blockquote
  background: #d5f0fe
  padding: 20px
  box-shadow: 1px 1px 0px #99dff3

blockquote p
  padding: 0

html, body, #app
  height 100%
  .container
    min-height 100%
